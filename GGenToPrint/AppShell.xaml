<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="GGenToPrint.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:main_page="clr-namespace:GGenToPrint.Resources.Views.MainPage"
    xmlns:font_page="clr-namespace:GGenToPrint.Resources.Views.FontPage"
    xmlns:edit_page="clr-namespace:GGenToPrint.Resources.Views.EditPage"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Главная">
            <ShellContent
                ContentTemplate="{DataTemplate main_page:MainPage}"
                Route="mainPage" />
        </Tab>
        <Tab Title="Шрифт">
            <ShellContent
                ContentTemplate="{DataTemplate font_page:FontPage}"
                Route="fontPage" />
        </Tab>
    </TabBar>
    <ShellContent
        ContentTemplate="{DataTemplate edit_page:EditPage}"
        Route="editPage" />
</Shell>